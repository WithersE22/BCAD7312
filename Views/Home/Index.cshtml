@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <h2>Welcome to ADHOC</h2>
    <p>Assertively done home, office and car repairs</p>

    <div class="row">
        <!-- Navigation to Site Locations -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Site Locations</h5>
                    <p class="card-text">View and manage construction site locations.</p>
                    <a href="/Locations/Index" class="btn btn-primary">Go to Site Locations</a>
                </div>
            </div>
        </div>

        <!-- Navigation to Services and Fees -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Services & Fees</h5>
                    <p class="card-text">View a breakdown of our services and associated fees.</p>
                    <a href="/Services/Index" class="btn btn-primary">View Services</a>
                </div>
            </div>
        </div>

        <!-- Navigation to Calendar -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Calendar</h5>
                    <p class="card-text">Keep track of ongoing and upcoming projects.</p>
                    <a href="/Calendar/Index" class="btn btn-primary">Go to Calendar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Navigation to Photo Gallery -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Photo Gallery</h5>
                    <p class="card-text">View photos from previous projects.</p>
                    <a href="/Gallery/Index" class="btn btn-primary">View Gallery</a>
                </div>
            </div>
        </div>

        <!-- Navigation to Reviews & Testimonials -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Reviews & Testimonials</h5>
                    <p class="card-text">Read reviews and testimonials from our clients.</p>
                    <a href="/Reviews/Index" class="btn btn-primary">View Reviews</a>
                </div>
            </div>
        </div>

        <!-- Navigation to Payment Gateway -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Contact Us</h5>
                    <p class="card-text">View our contact details.</p>
                    <a href="/Payments/Index" class="btn btn-primary">Go to Details</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Navigation to List of Skills -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Construction Skills</h5>
                    <p class="card-text">Explore the skills our team offers.</p>
                    <a href="/Skills/Index" class="btn btn-primary">View Skills</a>
                </div>
            </div>
        </div>

        <!-- Navigation to About Us -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">About Us</h5>
                    <p class="card-text">Learn more about our company.</p>
                    <a href="/Home/About" class="btn btn-primary">About Us</a>
                </div>
            </div>
        </div>

        <!-- Navigation to Work/Office Hours -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Work/Office Hours</h5>
                    <p class="card-text">Check our working hours and availability.</p>
                    <a href="/Home/WorkHours" class="btn btn-primary">View Hours</a>
                </div>
            </div>
        </div>
    </div>
</div>
